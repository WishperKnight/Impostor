<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark"
    tools:context=".activities.JuegoActivity">

    <!-- Nombre del Jugador Actual -->
    <TextView
        android:id="@+id/tv_current_player_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:textStyle="bold"
        tools:text="Turno de ANA"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Tarjeta Central de Revelación -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_revelation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="10dp"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toBottomOf="@id/tv_current_player_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="32dp"
            android:gravity="center">

            <!-- Contenedor del contenido que se oculta -->
            <LinearLayout
                android:id="@+id/ll_role_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:visibility="gone"
                tools:visibility="visible">

                <!-- Rol -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TU ROL ES:"
                    android:textColor="@color/text_secondary"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tv_player_role"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:textSize="36sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    tools:text="IMPOSTOR" />

                <View
                    android:layout_width="150dp"
                    android:layout_height="2dp"
                    android:background="@color/divider_color"
                    android:layout_marginBottom="16dp" />

                <!-- Palabra (o Pista si es Impostor) -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LA PALABRA CLAVE ES:"
                    android:textColor="@color/text_secondary"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tv_player_word"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    tools:text="PROCESIÓN" />

            </LinearLayout>

            <!-- Imagen/Placeholder Oculto (Se muestra al inicio) -->
            <ImageView
                android:id="@+id/img_mask_cover"
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:srcCompat="@drawable/impostor_loading_roles"
                android:contentDescription="Ocultar Rol"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv_instruction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pulsa el botón de abajo para ver tu rol y palabra."
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:textColor="@color/text_secondary"
                android:textSize="16sp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Botón de Acción Principal (Revelar / Entendido) -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_action"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:text="REVELAR ROL Y PALABRA"
        android:textSize="20sp"
        android:paddingTop="14dp"
        android:paddingBottom="14dp"
        app:cornerRadius="12dp"
        app:layout_constraintTop_toBottomOf="@id/card_revelation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp" />

    <!-- Botón de Siguiente Jugador (Oculto al inicio) -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_next_player"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:text="SIGUIENTE JUGADOR"
        android:textSize="20sp"
        android:paddingTop="14dp"
        android:paddingBottom="14dp"
        app:cornerRadius="12dp"
        android:visibility="gone"
        app:backgroundTint="@color/colorVibrantOrange"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="24dp" />

</androidx.constraintlayout.widget.ConstraintLayout>